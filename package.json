{
  "name": "eco-conscious-site",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "http-server -p 8080",
    "test:html": "html-validator-cli http://localhost:8080",
    "test:accessibility": "pa11y http://localhost:8080",
    "test:lh": "lighthouse http://localhost:8080 --chrome-flags=\"--no-sandbox\" --quiet",
    "test:ci": "npm run test:html && npm run test:accessibility && npm run test:lh"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "pa11y": "^6.0.0",
    "html-validator-cli": "^6.0.0",
    "lighthouse": "^10.0.0"
  }
}